<h1>Play!</h1>
<div id="board-container">
    <table id="board">
    	<%= image_tag('MiLLkE7gT.png') %>
    	<% if false %>
		<% 7.downto(0) do |y|%>
			<tr class="<%= 'y' + y.to_s %>" >
			<% for x in 0..7 %>
				<% if( (x+y) % 2 ==0) %>
					<td class="<%=  'x' + x.to_s %> dojoDndTarget dojoDndContainer dp">
					<%  @piece = @board[y][x] %>
					<% if (@piece != 0) %>
						<% @location = @pieceImages[@piece.to_s]  %>
						<%= image_tag @location, :class => "dojoDndItem" %>
					<% end %>
					</td>
				<% else %>
					<td></td>
				<% end %>
			<% end %>
			</tr>
		<% end %>
		<% end %>
    </table>
</div>