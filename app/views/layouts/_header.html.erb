<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "checkers game app", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
          <li class="<%= 'active' if current_page?(help_path) %>"><%= link_to "Help", help_path %></li>
          <% if signed_in? %>
            <li class="<%= 'active' if current_page?(users_path) %>"><%= link_to "Users", users_path %></li>
            <li class="<%= 'active' if current_page?(games_path) %>"><%= link_to "Games", games_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <% if false %>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <% end %>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
